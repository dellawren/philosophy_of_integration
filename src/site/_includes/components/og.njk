{# --- Clean OG output for Facebook & LinkedIn --- #}
{% if dg_metatags %}
  {% for key, val in dg_metatags %}
    {% if key startswith "og:" %}
      <meta property="{{ key }}" content="{{ val }}">
    {% elseif key startswith "twitter:" %}
      <meta name="{{ key }}" content="{{ val }}">
    {% elseif key == "description" %}
      <meta name="description" content="{{ val }}">
    {% endif %}
  {% endfor %}
{% endif %}

